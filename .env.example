# Environment variables for VedDB Server
# Copy this file to .env and customize

# Logging level (trace, debug, info, warn, error)
RUST_LOG=info

# Cache size in MB (adjust based on available memory)
VEDDB_CACHE_SIZE=256

# Master key for encryption (if --enable-encryption is used)
# IMPORTANT: Use a strong, randomly generated key in production
# Generate with: openssl rand -base64 32
VEDDB_MASTER_KEY=change-this-to-a-secure-32-byte-key

# Port mapping (host:container)
VEDDB_PORT=50051

# Resource limits
VEDDB_CPU_LIMIT=2.0
VEDDB_MEMORY_LIMIT=2G
